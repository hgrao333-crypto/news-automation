# Copy to .env and fill in your values. Do not commit .env.

# News
NEWS_API_KEY=

# LLM (optional; Ollama is used if no key set)
GEMINI_API_KEY=
OPENROUTER_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Image generation
IMAGINE_TOKEN=
IMAGINE_API_URL=https://api.vyro.ai/v2/image/generations

# TTS (ElevenLabs optional; Edge-TTS/gTTS are free)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5
TTS_USE_ELEVENLABS=true
TTS_USE_EDGE_TTS=true
TTS_EDGE_VOICE=en-IN-NeerjaNeural

# YouTube (optional)
YOUTUBE_CREDENTIALS_FILE=client_secret.json
YOUTUBE_TOKEN_FILE=token.pickle
YOUTUBE_AUTO_UPLOAD=false
YOUTUBE_PRIVACY_STATUS=public
YOUTUBE_CATEGORY_ID=22

# Content
USE_HOOK_BASED_HEADLINES=true
USE_CONTEXT_AWARE_OVERLAYS=true
CONTENT_STYLE=newsy
